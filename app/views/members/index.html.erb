<% title 'People' %>
<script type="text/javascript"> 
    $(document).ready(function(){ 
        $(document).pngFix(); 
    }); 
</script>

<body class="subpage">
	<div class="wrapper-mh">
		<% if !user_signed_in? %>
		<div>
			<%= render :partial => "home/learn_more" %>	
		</div>
		<% end %>
		<div class="maincol">					
	        <div class="tabbed-content-area"> 
				<div style="margin-top: 15px; font-size: 20px;padding-top:5px; text-align: center">
				   	People in Macabolic
				</div>									
				<br/>						
	        	<ul class="combined-list">
					<li class="grid group">
						<div>
							<% if !@members.nil? %>
							<ul class="friendships" id="macabolic_friends">
								<% @members.each do |member| %>	
									<li class="friend">
										<div style="text-align: center">
											<!-- Image -->	
											<%= image_tag current_profile_image_small_url(member), :width => 50, :height => 50 %>
											<span id="friend_name">
												<%= link_to member.full_name, member_path(member) %><br/>
												<%= member.followers.size %> followers<br/>
												<%= member.my_collection_items.size %> products<br/>											
												<div id="follow-user-link-<%= member.id %>">
												<% if user_signed_in? %>
													<% 
														if member != current_user 
															if current_user.following?(member)
													%>													
																<%= link_to "unfollow", unfollow_member_friendship_path(current_user, member), :class => "follow_link", :title => "Unfollow", :remote => true %>
															<% else %>
																<%= link_to "follow", follow_member_friendship_path(current_user, member), :class => "follow_link", :title => "Follow", :remote => true %>				
															<% end %>
													<%
														end
													%>
												<% else %>
													<%= link_to "follow", user_session_path, :class => "follow_link", :title => "Follow", :remote => false %>				
												<% end %>
												</div>
											</span>
										</div>
									</li>
							<% 
								member_collection_items = member.my_collection_items.order("updated_at DESC").limit(4)
								if member_collection_items.size > 0
									member_collection_items.each do |my_collection_item| 
							%>
									<li class="friend">
										<div>
											<%= link_to product_my_collection_item_path(my_collection_item.product, my_collection_item) do %>				
										<% if my_collection_item.product.thumbnail.present? %>
											<%= image_tag(my_collection_item.product.thumbnail.url(:small), :width => "80", :class => "preview-image", :title => my_collection_item.product.name) %>
										<% elsif my_collection_item.product.image_url.present? %>
											<%= image_tag(my_collection_item.product.image_url, :width => "80", :class => "preview-image", :title => my_collection_item.product.name) %>
										<% else %>
											<%= image_tag "/images/product/no-image_medium.jpg", :width => "80", :class => "preview-image", :title => my_collection_item.product.name %>
										<% end %>
										<% if my_collection_item.thumbnail.present? %>
											<%= image_tag(my_collection_item.thumbnail.url(:small), :width => "80", :class => "preview-image", :title => my_collection_item.product.name) %>
										<% end %>
											<% end %>
										</div>
									</li>	
							<%		
									end
								end
							%>
							<hr style="width: 100%; height: 1px; border: 1px solid white; margin: 0px 5px 0px 0px;"/>
							<% end %>
							</ul>
							<% end %>
						</div>
					</li>
				</ul> 
	        </div> 
			<br/>
		</div>
 	</div>

</body>

