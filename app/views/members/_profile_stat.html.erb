<div class="userdetails group">
	<div class="profileimage">
		<%= image_tag current_profile_image_url(@user), :width => 128 %>
	</div>
	<div class="profiledetails">
		<h2><%= @user.full_name %></h2>
		<ul>
			<li>Collections<span><%= @user.my_collections.size %></span></li>
			<li class="alt">Own<span><%= @user.owned_products.size %></span></li>
			<li>Wish<span><%= @user.wished_products.size %></span></li>
			<li class="noborder alt">Discovered<span><%= @user.discovered_products.size %></span></li>
		</ul>
	</div>
</div>
