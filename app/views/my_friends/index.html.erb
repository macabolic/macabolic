<h1>Listing My Friends</h1>

<table>
  <tr>
  </tr>

<% @my_friends.each do |my_friend| %>
  <tr>
	<td><%= my_friend.friend.login %></td>
    <td><%= link_to 'Show', my_friend %></td>
    <td><%= link_to 'Edit', edit_my_friend_path(my_friend) %></td>
    <td><%= link_to 'Destroy', my_friend, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

