<script type="text/javascript"> 
    $(document).ready(function(){ 
        $(document).pngFix();
		
        //Input Form placeholder
        $('input:text').focus(function(){
						this.style.color = '#131e22';
            if(this.value === this.defaultValue) {
                this.value = "";
            } else {
                this.select();
            }
        })

        .blur(function(){
            if ($.trim(this.value) === "") {
                this.value = (this.defaultValue ? this.defaultValue: "")
								this.style.color = '#a3a3a3';
            }
        });

    }); 
</script>

<% title 'Change your password' %>

<div id="grey-strip">
	<div class="wrapper-top">
		<%= render 'layouts/tagline' %>
	</div>
</div>

<div class="wrapper-homecontent">

	<% if resource.errors.empty? %>
	<div class="home-signup">
	<% else %>
	<div class="home-signup-with-error">
	<% end %>
		<div class="home-signup-th">Change your password</div>
		<div class="form_contents">
			<h4>Can't remember your password?</h4> 
			<p>Enter your email address below and we will send you the instruction to reset your password.</p>
		</div>
		
		<%= registration_error_messages! %>
		
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "home-signupform" }) do |f| %>
		  	<%= f.hidden_field :reset_password_token %>
		  	<%= f.password_field :password %>
			<%= f.password_field :password_confirmation %>

			<span class="home-signupbutton">
				<%= submit_tag "Change my password", :class => "home-signupbutton" %>
			</span>   
		<% end %>
	</div>

</div>
