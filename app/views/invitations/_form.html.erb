<script type="text/javascript"> 
    $(document).ready(function() { 
		$("#loading").hide(); //Hide all tab content
		$('#invite-friend-form').submit(function() {
			// Show the loading.gif
			$("#loading").show();
		});
    }); 
</script>
<div>
	<div class="sidebar-content account-info">
		<div class="sidebar-header">
			Invite your friend
		</div>
		<div class="sidebar-inner">					
			<%= form_for(invitation, :remote => true, :html => { :class => "invite-friend-form", :id => "invite-friend-form" }) do |f| %>
				<div>
        			<strong>Email</strong>
		  			<%= f.text_field :recipient_email, :placeholder => 'Invite your friend here...' %>
					<span id="loading">
						<%= image_tag "loading.gif" %>
					</span>
				</div>
				<span id="message" class="message"></span>
				<div class="action">
			    	<%= submit_tag "Submit", :class => "invite-friend" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
