<style type="text/css">
#activity a {
	text-decoration: none;
}

#activity a:hover {
	text-decoration: underline;
}

#activity strong {
	font-color: #000!important;
	color: #000!important;
}
</style>
<div class="sidebar">
	<div class="sidebar-content">
        <div class="sidebar-header" style="background: #dd6219;">Recent Updates</div>

		<div class="sidebar-inner" style="margin-top: 0px">
			<%= render :partial => 'friendships/follow_stat' %>
		</div>

		<div style="margin: 17px; border: 0px;">
			<div>
				<p style="font-size: 12px; font-family: Verdana;">					
		    	<ul id="search-list">
					<div id="products">
						<% activities.each do |activity| %>
						<% 
							if activity.name == 'Product' 
								user = activity.user
								product = activity.product								
						%>						
				        <li>
							<div>
								<div class="left" style="margin-right: 10px;">
									<% if product.thumbnail.present? %>
										<%= image_tag(product.thumbnail.url(:small), :width => "60", :class => "preview-image") %>
									<% elsif product.image_url.present? %>
										<%= image_tag(product.image_url, :width => "60", :class => "preview-image") %>
									<% else %>
										<%= image_tag "/images/product/no-image_small.jpg", :size => "60x60", :class => "preview-image" %>
									<% end %>
								</div>

								<p id="activity" style="margin-bottom: 3px;"><%= link_to collections_member_path(user) do %><strong><%= user %></strong><% end %> discovered <%= link_to product.name, product_path(product) %></p>								
							</div>
				        </li>
							<% 
								elsif activity.name == 'MyCollectionItem' 
								user = activity.user
								my_collection_item = activity.my_collection_item
								product = my_collection_item.product
								my_collection = my_collection_item.my_collection									
							%>
				        <li>
							<div>
								<div class="left" style="margin-right: 10px;">
									<% if product.thumbnail.present? %>
										<%= image_tag(product.thumbnail.url(:small), :width => "60", :class => "preview-image") %>
									<% elsif product.image_url.present? %>
										<%= image_tag(product.image_url, :width => "60", :class => "preview-image") %>
									<% else %>
										<%= image_tag "/images/product/no-image_small.jpg", :size => "60x60", :class => "preview-image" %>
									<% end %>
								</div>
								<p id="activity" style="margin-bottom: 3px;"><%= link_to collections_member_path(user) do %><strong><%= user %></strong><% end %> added <%= link_to product.name, product_my_collection_item_path(product, my_collection_item) %> to the <%= my_collection.name %>.</p>								
							</div>
				        </li>
							<% elsif activity.name == 'MyCollection' %>						
							<% end %>
						<% end %>
					</div>
				</ul>
				</p>
			</div>
		</div>
	</div>
</div>