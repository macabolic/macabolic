<% title "Feature Tour" %>
<div class="wrapper-featuretour">
	<!-- Beginning of the 'featuretour-container' -->
	<div class="featuretour-container">	
		
		<!-- Beginning of the 'slider-wrapper' -->		
		<div id="slider-wrapper">
    	<div id="slider" class="nivoSlider">
				<%= image_tag "/images/banners/featuretour-1.jpg", :alt => "Feature Tour 1", :width => "912", :height => "352", :title => "#htmlcaption" %>
				<%= image_tag "/images/banners/featuretour-2.jpg", :alt => "Feature Tour 2", :width => "912", :height => "352" %>
    	</div>
            
	    <div id="htmlcaption" class="nivo-html-caption">
	    	<h2>A Social Network Dedicated to Mac Lovers.</h2>
				<h3>Sign up or continue reading to see why you to be a part of Macabolic.</h3>
				<ul class="featuretour-signupbutton-top">
					<li class="featuretour-signupbutton-top"><%= link_to 'Notify Me', root_url %></li>
				</ul>
			</div>
 
  	</div>
		<!-- End of the 'slider-wrapper' -->
			
		<!-- Beginning of the 'featurepanel1' -->		
		<div class="featurepanel1">
			<%= image_tag "/images/featuretour/image1.png", :alt => "Build around your friends", :width => "255", :height => "135", :class => "borderimage" %>
			<h4>Build around your friends</h4>
			<p>Invite your friends from Facebook or simplyinvite them by email</p>
		</div>
		<!-- End of the 'featurepanel1' -->		
			
		<!-- Beginning of the 'featurepanel2' -->		
		<div class="featurepanel2">
			<%= image_tag "/images/featuretour/image2.png", :alt => "Recommend a product", :width => "255", :height => "135", :class => "borderimage" %>
			<h4>Recommend a product</h4>
			<p>Share your favorite product to your group of friends</p>
		</div>
		<!-- End of the 'featurepanel2' -->		
			
		<!-- Beginning of the 'featurepanel3' -->		
		<div class="featurepanel3">
			<%= image_tag "/images/featuretour/image3.png", :alt => "Post useful tips", :width => "255", :height => "135", :class => "borderimage" %>
			<h4>Post useful tips</h4>
			<p>Are you a seasoned user? Contribute with just a click in your home page</p>
		</div>
		<!-- End of the 'featurepanel3' -->		
			
		<!-- Beginning of the 'featurepanel4' -->		
		<div class="featurepanel4">
			<%= image_tag "/images/featuretour/image4.png", :alt => "Ask a question", :width => "255", :height => "135", :class => "borderimage2" %>
			<h4>Ask a question</h4>
			<p>Do you have an question on a product? Ask someone who owns it</p>
		</div>
		<!-- End of the 'featurepanel4' -->		
			
		<!-- Beginning of the 'featurepanel5' -->		
		<div class="featurepanel5">
			<%= image_tag "/images/featuretour/image5.png", :alt => "Share your collections", :width => "255", :height => "135", :class => "borderimage2" %>
			<h4>Share your collections</h4>
			<p>Share your mac collections with your friends and network with what you have</p>
		</div>
		<!-- End of the 'featurepanel5' -->		
	
		<!-- Beginning of the 'featurepanel6' -->		
		<div class="featurepanel6">
			<%= image_tag "/images/featuretour/image6.png", :alt => "Bookmark your favorite tips and answers", :width => "255", :height => "135", :class => "borderimage2" %>
			<h4>Bookmark</h4>
			<p>Create your bookmark of tips and answers in Macabolic</p>
		</div>
		<!-- End of the 'featurepanel6' -->		
			
		<div class="cta"></div>
		<ul class="featuretour-signupbutton-bottom">
			<li class="featuretour-signupbutton-bottom"><%= link_to 'Notify Me', root_url %></li>
		</ul>	
	</div>
	<!-- End of the 'featuretour-container' -->

</div>

<script type="text/javascript">
	$(window).load(function() {
	    $('#slider').nivoSlider({
	        effect:'fade', //Specify sets like: 'fold,fade,sliceDown'
	        slices:15,
	        animSpeed:500, //Slide transition speed
	        pauseTime:15000,
	        startSlide:0, //Set starting Slide (0 index)
	        directionNav:true, //Next & Prev
	        directionNavHide:false, //Only show on hover
	        controlNav:false, //1,2,3...
	        controlNavThumbs:false, //Use thumbnails for Control Nav
	        controlNavThumbsFromRel:false, //Use image rel for thumbs
	        controlNavThumbsSearch: '.jpg', //Replace this with...
	        controlNavThumbsReplace: '_thumb.jpg', //...this in thumb Image src
	        keyboardNav:true, //Use left & right arrows
	        pauseOnHover:true, //Stop animation while hovering
	        manualAdvance:false, //Force manual transitions
	        captionOpacity:1.0, //Universal caption opacity
	        beforeChange: function(){},
	        afterChange: function(){},
	        slideshowEnd: function(){}, //Triggers after all slides have been shown
	        lastSlide: function(){}, //Triggers when last slide is shown
	        afterLoad: function(){} //Triggers when slider has loaded
	    });
	});
</script>