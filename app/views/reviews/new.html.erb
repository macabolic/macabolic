<p class="header">Write a Review</p>
<% form_for [@product, @review] do |f| %>
<%= f.error_messages %>
<table border="0" width="100%">
	<thead>
		<tr class="review_header round">
			<td class="review_header round">
				<p class="review_header round">MacBook Pro</p>
			</td>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
				<div class="unit on-2 columns">
					<div class="column">
						<!-- image -->
					</div>
					<div class="column">
						<p><%= label_tag 'rating' %></p>
						<%= f.text_field :rating %>
					</div>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div>
					<p><%= label_tag 'title' %></p>
					<%= f.text_field :title %>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<div>
					<p><%= label_tag 'review' %></p>
					<%= f.text_area :content %>
				</div>
			</td>
		</tr>
	</tbody>
	<tfoot>
		<tr>
			<td>
				<%= f.hidden_field :user_id, :value => current_user.id %>
				<%= f.submit 'Submit' %>
			</td>
		</tr>
	</tfoot>
</table>
<% end %>

