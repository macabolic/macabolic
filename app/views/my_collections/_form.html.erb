<script type="text/javascript">
function size(t) {
	a = t.value.split('\n');
	b=1;
	for (x=0;x < a.length; x++) {
 		if (a[x].length >= t.cols) b+= Math.floor(a[x].length/t.cols);
 	}

	b+= a.length;
	if (b > t.rows) t.rows = b;
};
</script>
<% 
	@my_collection = MyCollection.new
	@my_collection.name = ''
	@my_collection.user = user
%>
<%= form_for(@my_collection, :html => { :multipart => true }) do |f| %>
	<label for="tiptitle">Name</label>
	<%= f.text_field :name, :placeholder => MyCollection::DEFAULT_COLLECTION_NAME, :class => "text" %><br/><br/>

	<label for="tiptitle">Picture</label>
	<%= f.file_field :thumbnail %>
	<span style="color: #999999; font-size: 11px;">(Maximum size of 700k. JPG, GIF, PNG.)</span>
    
	<%#= f.label :description %>
	<label for="tiptitle">Description</label>
	<%= f.text_area :description, :cols => 35, :rows => 5, :class=> "answer_area", :onKeyUp => "size(this);" %>

	<%= hidden_field :my_collection, :user_id %>
	<div class="actions">
		<%= f.submit 'Submit', :class => "submit-tip-button" %>
	</div>
<% end %>
