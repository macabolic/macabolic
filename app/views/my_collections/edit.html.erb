<% title @my_collection.name %>
<style type="text/css">
	.save_button {
		cursor: pointer;
	}
</style>
<script type="text/javascript">  
$(document).ready(function() {
    $(document).pngFix(); 
 
	//Default Action
	$(".tab_content").hide(); //Hide all content
	$("ul.tabs li:first").addClass("active").show(); //Activate first tab
	$(".tab_content:first").show(); //Show first tab content
});
</script>
<body class="subpage">
	<div id="grey-strip-signedin">
		<div class="wrapper-top">
			<%= render :partial => 'layouts/navigation', :locals => { :user => @user, :item => "Collections" } %>
		</div>
	</div>
	
	<div class="wrapper-mh">
		<div class="maincol">
			<%= form_for(@my_collection, :html => { :multipart => true }) do |f| %>
	    	<div class="product-item sidebar-content">
		        <div class="product-image">
					<%= image_tag @my_collection.thumbnail.url(:medium), :width => "200", :class => "preview-image" %>
					<div style="padding-top:15px; text-align: center">
						<span class="home-signupbutton">
					   		<%= link_to "Delete this collection?", { :controller => "my_collections", :action => "destroy", :id => @my_collection }, :method => "delete", :title => "Delete this collection?", :confirm => "Are you sure? \nThis will remove all items and data related to this collection." %>
						</span>
					 </div>					
			    </div>
		        <div class="product-detail">
					<p class="left">
						<%= f.file_field :thumbnail %>
					</p>
					<%= f.text_field :name, :class => 'big_input' %><br/>
					<%= f.text_area :description, :cols => 60, :rows => 5, :class=> "answer_area", :onKeyUp => "size(this);" %>			
					<p>
						<div id="add_wishlist">						
							<%= f.submit 'Save', :class => "save_button" %>
							<%= link_to 'Done editing', member_my_collection_path(current_user, @my_collection) %>
						</div>
					</p>
					<!--
					<div id="my-collection-stat-details" class="product-stat-details" style="float: left; width: 333px;">
						<%#= render :partial => "my_collections/my_collection_stat", :locals => { :my_collection => @my_collection } %>
					</div>
					-->
		        </div>
			    <br class="clear" />
			</div>						
			<% end %>			
		<% @my_collection_items = @my_collection.my_collection_items %>
		<% if @my_collection_items.empty? %>
			<div class="tabbed-content-area">
				<ul class="tabs"> 
			        <li><a href="#tab1">Collection Items</a></li> 
				</ul> 		
		        <div id="tab1" class="tab_content product-grid group"> 
	            	<div id="search-result" class="no-result">
		                <p>
		                	You do not have any items yet. Add one now.
		                </p>	
	            	</div>
				</div>
			</div>
		<% else %>	
			<div class="tabbed-content-area">
				<ul class="tabs"> 
			        <li><a href="#tab1">Collection Items</a></li> 
				</ul> 		
		        <div id="tab1" class="tab_content product-grid group"> 
					<%= render :partial => 'my_collection_items/index', :locals => { :my_collection_items => @my_collection_items, :mode => "edit", :filter_my_collection_item => nil } %>
				</div>
			</div>	
		<% end %>			
		</div>

		<div class="sidebar">			
			<%= render :partial => 'products/product_search', :locals => { :my_collection => @my_collection } %>
		</div>
	</div>
</body>