<style type="text/css">
	#action_link {
		text-align: right;
		border: 0px solid black;
		display: none;
	}
	#like_comment {
		color: #ABABAB;
	}
	#like_comment a {
		text-decoration: none;
		font-weight: normal;
		color: #ABABAB;
	}	
</style>
<ul id="collection-items" class="list-my-collections">
	<% count = 0 %>
	<% my_collection_items.each do |my_collection_item| %>
	<% if filter_my_collection_item != my_collection_item %>
	<li>
		<%= link_to(my_collection_item) do %>
			<span class="right">
				<% if mode == "edit" %>
					<%= link_to 'delete', product_my_collection_item_path(my_collection_item.product, my_collection_item), :method => 'delete', :class => "edit_link" %>
				<% else %>				
					<%= link_to '#', my_collection_item, :method => 'show', :id => "action_link", :class => "edit_link" %>
				<% end %>
			</span>															
			<div class="center">
				<span class="productimage">
					<%= link_to product_my_collection_item_path(my_collection_item.product, my_collection_item) do %>
						<%#= image_tag my_collection_item.product.thumbnail.url(:medium), :width => "150", :height => "150", :title => "#{my_collection_item.product.name}" %>
						<% if my_collection_item.product.thumbnail.present? %>
							<%= image_tag(my_collection_item.product.thumbnail.url(:small), :class => "preview-image") %>
						<% elsif my_collection_item.product.image_url.present? %>
							<%= image_tag(my_collection_item.product.image_url, :width => "150", :class => "preview-image") %>
						<% else %>
							<%= image_tag "/images/product/no-image_medium.jpg", :size => "150x150", :class => "preview-image" %>
						<% end %>
					
					<% end %>
				</span>								
			</div>								
			<div>
				<span class="vendor">
					<%= link_to simple_format(word_wrap(my_collection_item.product.vendor.name, :line_width => 50)), store_path(my_collection_item.product.vendor) %>
				</span>
				<span>
					<%= link_to product_my_collection_item_path(my_collection_item.product, my_collection_item) do %>
						<p><%= simple_format(word_wrap(my_collection_item.product.name, :line_width => 50)) %></p>
					<% end %>				        	
				</span>
			</div>
			<div id="product-info-<%= count %>" class="overlay" style="height: 30px; display:inline;">
				<p style="position: relative;">
					<span id="like_comment" class="left">
						<%= link_to pluralize(my_collection_item.product.responses.size, "like"), product_path(my_collection_item.product) %> |  
						<%= link_to pluralize(my_collection_item.product.comments.size, "comment"), product_path(my_collection_item.product) %>
					</span>
					<span id="like_comment" style="text-align: right">
					<% if my_collection_item.product.price_range.present? %>					
						<%= my_collection_item.product.price_range.display %>
					<% else %>
						<!-- Not showing the price -->
					<% end %>
					</span>
				</p>
			</div>			
			
		<% end %>
	</li>
	<% end %>						
	<%
		count = count + 1
		if count % 3 == 0
	%>
		<hr style="width: 100%; height: 1px; border: 1px solid white; margin: 0px 5px 0px 0px;"/>
	<% 
		end 
	%>
	<% end %>	
</ul>


