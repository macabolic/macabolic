<% if !params[:invitation_token].nil? && !params[:invitation_token].empty? %>
<% title "Confirm your invitation" %>
<div id="grey-strip">
	<div class="wrapper-top">
		<div class="headings-left">
			<h2>Sign Up</h2>
			<h3>It's <span>free</span> and takes 2 minutes!</h3>
			<ul class="home-featurebutton">
				<li class="home-featurebutton"><%= link_to 'Feature Tour', "feature-tour" %></a></li>
			</ul>
		</div>
		<div class="headings-right">
			<ul id="signupsteps">
        		<li class="step1ON">Step1</li>
<!--
        		<li class="step2">Step2</li>
        		<li class="step3">Step3</li>
-->
			</ul>
		</div>
	</div>
</div>

<div class="wrapper-homecontent">
	<!-- A form here with First Name, Last Name, Email Address -->
	<%= render "registrations/form" %>
</div>

<% else %>
<div id="grey-strip">
	<div class="wrapper-top">
		<%= render 'layouts/tagline' %>
		<ul class="home-featurebutton">
			<li class="home-featurebutton"><%= link_to 'Feature Tour', "feature-tour" %></a></li>
		</ul>
	</div>
</div>

<% title "Sign up" %>
<div class="wrapper-homecontent">
	<%= image_tag "/images/sitewide/home-or.png", :alt => "home-or", :width => "186", :height => "10", :class => "or" %>
	<!-- A form here with First Name, Last Name, Email Address -->
	<%= render "registrations/form" %>
</div>
<% end %>
