<% title 'Following'%>
<script type="text/javascript"> 
    $(document).ready(function(){ 
        $(document).pngFix(); 
    }); 
</script>

<body class="subpage">

	<div id="grey-strip-signedin">
		<div class="wrapper-top">
			<%= render :partial => 'layouts/navigation', :locals => { :user => @user, :item => "Following" } %>						
		</div>
	</div>

	<div class="wrapper-mh">
		<div class="maincol">					
	        <div class="tabbed-content-area"> 
	        	<ul class="combined-list">
					<li class="grid group">
						<div>
							<% if !@following.nil? && @following.size > 0 %>								

								<% if !@people.nil? %>
								<ul class="friendships" id="macabolic_friends">
									<% @people.each do |following| %>	
										<li class="friend">
											<div style="text-align: center">
												<!-- Image -->	
												<%= image_tag current_profile_image_small_url(following), :width => 80, :height => 80 %>
												<span id="friend_name">
													<%= link_to following.full_name, member_path(following) %><br/>
													<div id="follow-user-link-<%= following.id %>">
													<% if user_signed_in? %>
														<% if @user == current_user %>
															<%= link_to "unfollow", unfollow_member_friendship_path(current_user, following), :class => "follow_link", :title => "Unfollow", :remote => true %>
														<% else %>
															<%= link_to "follow", follow_member_friendship_path(current_user, @user), :class => "follow_link", :title => "Follow", :remote => true %>				
														<% end %>
													<% else %>
														<%= link_to "follow", user_session_path, :class => "follow_link", :title => "Follow", :remote => false %>				
													<% end %>
													</div>
												</span>
											</div>
										</li>
								<% 
									following_collection_items = following.my_collection_items.order("updated_at DESC").limit(4)
									if following_collection_items.size > 0
										following_collection_items.each do |my_collection_item| 
								%>
										<li class="friend">
											<div>
												<%= link_to product_my_collection_item_path(my_collection_item.product, my_collection_item) do %>				
											<% if my_collection_item.product.thumbnail.present? %>
												<%= image_tag(my_collection_item.product.thumbnail.url(:small), :width => "80", :class => "preview-image", :title => my_collection_item.product.name) %>
											<% elsif my_collection_item.product.image_url.present? %>
												<%= image_tag(my_collection_item.product.image_url, :width => "80", :class => "preview-image", :title => my_collection_item.product.name) %>
											<% else %>
												<%= image_tag "/images/product/no-image_medium.jpg", :width => "80", :class => "preview-image", :title => my_collection_item.product.name %>
											<% end %>
											<% if my_collection_item.thumbnail.present? %>
												<%= image_tag(my_collection_item.thumbnail.url(:small), :width => "80", :class => "preview-image", :title => my_collection_item.product.name) %>
											<% end %>
												<% end %>
											</div>
										</li>	
								<%		
										end
									end
								%>
								<hr style="width: 100%; height: 1px; border: 1px solid white; margin: 0px 5px 0px 0px;"/>
								<% end %>
								</ul>
								<% end %>
							<% end %>
						</div>
					</li>
				<% end %>
			</ul> 
        </div> 
		<br/>
