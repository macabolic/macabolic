<% if !followings.nil? %>
<ul class="friendships" id="macabolic_friends">
	<% followings.each do |following| %>	
		<li class="friend">
			<div style="text-align: center">
				<!-- Image -->	
				<%= image_tag current_profile_image_small_url(following), :width => 80, :height => 80 %>
				<span id="friend_name">
					<%= link_to following.full_name, member_path(following) %><br/>
					<div id="follow-user-link-<%= following.id %>">
					<% if user_signed_in? %>
						<% if @user == current_user %>
							<%= link_to "unfollow", unfollow_member_friendship_path(current_user, following), :class => "follow_link", :title => "Unfollow", :remote => true %>
						<% else %>
							<%= link_to "follow", follow_member_friendship_path(current_user, @user), :class => "follow_link", :title => "Follow", :remote => true %>				
						<% end %>
					<% else %>
						<%= link_to "follow", user_session_path(User.new), :class => "follow_link", :title => "Follow", :remote => true %>				
					<% end %>
					</div>
				</span>
			</div>
		</li>
<% 
	following_collection_items = following.my_collection_items.order("updated_at DESC").limit(4)
	if following_collection_items.size > 0
		following_collection_items.each do |my_collection_item| 
%>
		<li class="friend">
			<div>
				<%= link_to product_my_collection_item_path(my_collection_item.product, my_collection_item) do %>				
			<% if my_collection_item.product.thumbnail.present? %>
				<%= image_tag(my_collection_item.product.thumbnail.url(:small), :width => "80", :class => "preview-image") %>
				<% thumbnail_image_path "http://#{HOST}#{my_collection_item.product.thumbnail.url(:small)}" %>
			<% elsif my_collection_item.product.image_url.present? %>
				<%= image_tag(my_collection_item.product.image_url, :width => "80", :class => "preview-image") %>
				<% thumbnail_image_path my_collection_item.product.image_url %>
			<% else %>
				<%= image_tag "/images/product/no-image_medium.jpg", :width => "80", :class => "preview-image" %>
				<% thumbnail_image_path "http://#{HOST}/images/product/no-image_medium.jpg" %>
			<% end %>
			<% if my_collection_item.thumbnail.present? %>
				<%= image_tag(my_collection_item.thumbnail.url(:small), :width => "80", :class => "preview-image") %>
				<% thumbnail_image_path "http://#{HOST}#{my_collection_item.thumbnail.url(:small)}" %>
			<% end %>
				<% end %>
			</div>
		</li>	
<%		
		end
	end
%>
<hr style="width: 100%; height: 1px; border: 1px solid white; margin: 0px 5px 0px 0px;"/>
<% end %>
</ul>
<% end %>