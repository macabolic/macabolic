<div id="my_profile">
	<table>
	<thead>
	  	<tr>
			<td><b>My Profile</b></td>
			<td class="action" align="right"><%= link_to 'Edit', edit_my_profile_path(@my_profile) %></td>
	  	</tr>
	</thead>
	<tbody>		
		<tr>
			<td>
				<% if @my_profile.photo.nil? %>
					<%= image_tag '/images/icon_no_photo_60x60.png' %>
				<% else %>
					<%= image_tag @my_profile.photo.url(:small) %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td>
				<div id="name"><%= @my_profile.first_name %> <%= @my_profile.last_name %></div>
			</td>
		</tr>	
		<tr>
			<td>
				Gender: <br/>
				<%= @my_profile.gender %>
			</td>
		</tr>
		<tr>
			<td>
				Country: <br/>
				<%= @my_profile.country %>
			</td>
		</tr>
	</tbody>
	</table>
</div>
<hr width="200px" align="left"/>
<div id="my_collections">
	<table>
	<thead>
	  <tr>
		<td><b>My Collections</b></td>
		<td align="right" class="action">
			<% if !@my_collection_details.nil? && @my_collection_details.size > 0 %>
				<%= link_to 'see all', my_collections_path %>
			<% end %>
		</td>
	  </tr>
	</thead>
	<tbody>
	<% if !@my_collection_details.nil? && @my_collection_details.size > 0 %>
	<% @my_collection_details.each do |my_collection_detail| %>	
	  <tr>
		<td align="center">
			<img src="<%= my_collection_detail.product.photo.url(:thumb) %>" />
		</td>
	    <td>
			<%= my_collection_detail.product.name %><br/>
	    	<%= link_to 'Edit', edit_my_collection_detail_path(my_collection_detail) %><br/>
		</td>
	  </tr>
	<% end %>
	<% else %>
	  <tr>
		<td colspan="2" align="center">You do not have any collection yet.</td>			
	  </tr>				
	<% end %>
	</tbody>
	<tfoot>
		<tr>
			<td></td>
			<td class="action" align="right"><%= link_to 'add', my_collections_path %></td>
		</tr>
	</tfoot>
	</table>
	<!-- %= render :partial => "my_collection_details/index", :collection => @my_collection_details % -->
</div>

