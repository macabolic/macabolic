<h1>Listing recommendations</h1>

<table>
  <tr>
    <th>From user</th>
    <th>To user</th>
    <th>Product</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recommendations.each do |recommendation| %>
  <tr>
    <td><%= recommendation.from_user_id %></td>
    <td><%= recommendation.to_user_id %></td>
    <td><%= recommendation.product_id %></td>
    <td><%= link_to 'Show', recommendation %></td>
    <td><%= link_to 'Edit', edit_recommendation_path(recommendation) %></td>
    <td><%= link_to 'Destroy', recommendation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

