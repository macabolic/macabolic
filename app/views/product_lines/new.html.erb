<h1>New product_line</h1>

<% form_for(@product_line) do |f| %>
  <%= f.error_messages %>
	<p>
		<%= label_tag 'name' %>: <%= f.text_field :name %>
	</p>
	<p>
		<%= label_tag 'vendor' %>: <%= collection_select(:product_line, :vendor_id, @vendors, :id, :name) %>		
	</p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', product_lines_path %>